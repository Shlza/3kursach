<Window x:Class="BusinessTripApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding MainVM, Source={StaticResource Locator}}"
        Title="Управление командировками" Height="450" Width="800">
    <Grid>
        <!-- Список командировок -->
        <DataGrid ItemsSource="{Binding BusinessTrips}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Место назначения" Binding="{Binding Destination}" />
                <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate}" />
                <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDate}" />
                <DataGridTextColumn Header="Цель" Binding="{Binding Purpose}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка для добавления новой командировки -->
        <Button Content="Добавить командировку" Command="{Binding AddBusinessTripCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Margin="0,10,10,0"/>
    </Grid>
</Window>
