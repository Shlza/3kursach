<Window x:Class="BusinessTripApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding LoginVM, Source={StaticResource Locator}}"
        Title="Авторизация" Height="200" Width="400">
    <Grid>
        <Label Content="Имя пользователя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="200"/>

        <Button Content="Войти" Command="{Binding LoginCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="150,100,0,0"/>
    </Grid>
</Window>
