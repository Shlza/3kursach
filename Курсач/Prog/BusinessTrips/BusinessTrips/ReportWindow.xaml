<Window x:Class="BusinessTripApp.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding ReportVM, Source={StaticResource Locator}}"
        Title="Генерация отчетов" Height="300" Width="500">
    <Grid>
        <Label Content="Дата начала:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <DatePicker x:Name="StartDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0" Width="150"/>

        <Label Content="Дата окончания:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <DatePicker x:Name="EndDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" Width="150"/>

        <Button Content="Создать отчет PDF" Command="{Binding GeneratePdfReportCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,100,0,0"/>
        <Button Content="Создать отчет Excel" Command="{Binding GenerateExcelReportCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="200,100,0,0"/>
    </Grid>
</Window>
